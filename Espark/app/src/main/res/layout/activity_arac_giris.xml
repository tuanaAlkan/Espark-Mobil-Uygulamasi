<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AracGiris">

    <ImageView
        android:src="@drawable/espark"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="160dp"
        android:text="ARAÇ GİRİŞ"
        android:textSize="17dp"
        android:textColor="#D14444"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="200dp"
        android:text="Araç Plakası Giriniz:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ImageView
        android:src="@drawable/arac"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="280dp"/>

    <EditText
        android:id="@+id/aracplaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="70dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Plaka" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarife Seçiniz:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="70dp"/>

    <ListView
        android:id="@+id/tarife"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="320dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Süre Aralığını Seçiniz:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="70dp"/>

    <ListView
        android:id="@+id/sure"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="480dp" />

    <Button
        android:id="@+id/aracgirisiyap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="620dp"
        android:backgroundTint="#D14444"
        android:text="Araç Girişi Yap"
        android:textColor="@color/black" />

</RelativeLayout>