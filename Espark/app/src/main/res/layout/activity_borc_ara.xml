<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BorcAra">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/espark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="160dp"
        android:text="BORÇ ARA"
        android:textSize="17dp"
        android:textColor="#D14444"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borcu Aranacak Aracın Plakasını Giriniz:"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/borcplaka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Plaka"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="70dp"/>

    <ImageView
        android:src="@drawable/borc"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="55dp"/>

    <Button
        android:id="@+id/borcara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BORÇ ARA"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:backgroundTint="#D14444"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="130dp"/>

</RelativeLayout>