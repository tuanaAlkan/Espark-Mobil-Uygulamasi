<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Giris">

    <ImageView
        android:src="@drawable/espark"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/girissayfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="140dp"
        android:text="GİRİŞ SAYFASI"
        android:textSize="17dp"
        android:textColor="#D14444"/>

    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="190dp"
        android:text="Kullanıcı Adı Giriniz:"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/kullaniciad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="220dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Kullanıcı Adı" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Şifre Giriniz:"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="70dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberPassword"
        android:hint="Şifre"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="70dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lokasyon Giriniz:"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="70dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/lokasyon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Lokasyon"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="70dp"/>

    <Button
        android:id="@+id/kayitol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:textColor="@color/black"
        android:layout_marginTop="460dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/sifremiunuttum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifremi Unuttum"
        android:textColor="@color/black"
        android:layout_marginTop="500dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/girisyap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="560dp"
        android:backgroundTint="#D14444"
        android:text="Giriş Yap"
        android:textColor="@color/black" />

</RelativeLayout>